{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "features/*": ["features/*"],
      "entities/*": ["entities/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true, // Опционально: включает строгий режим
    "noEmit": true  // Опционально: не выводит файлы
    // Добавьте другие необходимые опции
  },
  "include": ["src","public", "src/types/global.d.ts"]
}
